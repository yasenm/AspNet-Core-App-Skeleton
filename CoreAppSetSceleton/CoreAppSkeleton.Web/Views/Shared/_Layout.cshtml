<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <environment names="Development">
        <link rel="stylesheet" asp-href-include="~/css/*.css" />
    </environment>

    <environment names="Staging, Production">
        <link rel="stylesheet" href="~/css/min/site.min.css" />
    </environment>

</head>
<body>
    <environment names="Development">
        <script src="~/js/jquery.js"></script>
        <script asp-src-include="~/js/*.js"></script>
    </environment>

    <environment names="Staging, Production">
        <script src="~/js/min/site.min.js"></script>
    </environment>

    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">
                    <img alt="Brand" height="20" width="20" src="data:image/png;base64,">
                </a>
            </div>

            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

                @if (User.Identity.IsAuthenticated)
                {
                    <ul class="nav navbar-nav navbar-right">
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle"
                               data-toggle="dropdown"
                               role="button"
                               aria-haspopup="true"
                               aria-expanded="false">
                                @User.Identity.Name
                                <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li><a asp-controller="App" asp-action="Profile">Profile</a></li>
                                <li role="separator" class="divider"></li>
                                <li><a asp-controller="Auth" asp-action="Logout">Logout</a></li>
                            </ul>
                        </li>
                    </ul>
                }
            </div>
        </div>
    </nav>

    <div class="container">
        @RenderBody()
    </div>

    <nav class="navbar navbar-default navbar-fixed-bottom">
        <div class="container text-center">
            <h3>@DateTime.Now.Year</h3>
        </div>
    </nav>

    @RenderSection("scripts", false)
</body>
</html>
